#!/usr/bin/env ruby

require 'webrick'
require 'listen'
require_relative '../src/build.rb'

server = WEBrick::HTTPServer.new Port: 3000, DocumentRoot: 'build'

rebuilder = Listen.to('src') do |modified, added, removed|
  puts "rebuilding"
  Builder.run
end

rebuilder.start

trap('INT') { server.shutdown }
server.start
